RewriteEngine On

# Route API and utility endpoints to PHP router
RewriteRule ^api/.*$ api/index.php [QSA,L]
RewriteRule ^sitemap\.xml$ api/index.php [QSA,L]
RewriteRule ^robots\.txt$ api/index.php [QSA,L]

# Pretty URLs for static policy pages
RewriteRule ^privacy/?$ privacy.html [L]
RewriteRule ^terms/?$ terms.html [L]
